{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src/",
        "incremental": true,
        "jsx": "react",
        "lib": [
            "es2019",
            "dom",
            "dom.iterable"
        ],
        "esModuleInterop": true,
        "module": "commonjs",
        "outDir": "./dist",
        "paths": {
            "Bot": [
                "bot/index"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ]
}